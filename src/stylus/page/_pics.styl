.pics
  &__main
    &__block
      &__photos
        padding 1rem 0
        img
          border: double 8px c_pics_white
  .lb-data
    .lb-close
      background-size: contain
      height: 20px
      opacity 1
      width 20px
    .lb-number
      color c_pics_white
  .lb-nav
    a.lb-prev, a.lb-next
      background-size: contain
      width 10%

+ls()
  .pics
    &__main
      &__block
        display grid
        grid-auto-flow row
        grid-column-gap 2rem
        grid-template-columns 1fr 1fr
        &__photos
          padding 1rem 0
    .lb-nav
      a.lb-prev, a.lb-next
        width 5%