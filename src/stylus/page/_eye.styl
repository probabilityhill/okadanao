.eyeBackground
  color c_eye_purple_transp
  font-size 120%
  margin 0
.eyeAccessCounter
  color c_eye_red
  font-size 150%
  font-weight 600
  position absolute
  right 0
  top: 20rem
  z-index 9999
  img
    width 15rem
.eyeIllust
  position absolute
  &:nth-of-type(7)
    left: 0
    top: 0
    width 20rem
  &:nth-of-type(8)
    right: 0
    top: 8rem
    width 18rem

.eyeArtworkSm
  height: 8rem
  width: 8rem
.eyeArtworkLg
  height: 20rem
  width: 20rem

.eyeLuckySong
  position absolute
  top: 100vh
  &__ttl
    background-color: c_eye_yellow
    border: double 4px c_eye_blue
    color c_eye_purple
    font-size 150%
    width: 15rem
  &__stc
    color: c_eye_violet
  &__tables
    display: flex
    flex-wrap: wrap
    font-size 80%
    table
      border: solid 1px c_eye_black
      margin 1rem
      th, td
        border: solid 1px c_eye_black
        a
          color: c_eye_blue
          text-decoration: underline 1px c_eye_blue
+ls()
  .eyeAccessCounter
    font-size: 200%
    right 5rem
    top: 30rem
    img
      width 20rem
  .eyeIllust
    &:nth-of-type(7)
      width 40rem
    &:nth-of-type(8)
      right: 3rem
      width 30rem
  .eyeLuckySong
    &__ttl
      font-size 200%
      width: 20rem