.eyeBackground
  color c_eye_purple_transp
  font-size 120%
  margin 0
.eyeAccessCounter
  color c_eye_red
  font-size 150%
  font-weight 600
  position absolute
  right 0
  top: 0
  z-index 9999
  &__txt
    margin 0
  img
    width 15rem
.eyeIllust
  height: 15rem
  position absolute
  width auto
  &:nth-of-type(2n+1)
    left: 0
  &:nth-of-type(2n)
    right: 0
  &:nth-of-type(1)
    top: 10rem
  &:nth-of-type(2)
    height: 30rem
    top: 25rem
  &:nth-of-type(3)
    top: 55rem
  &:nth-of-type(4)
    top: 70rem
  &:nth-of-type(5)
    height: 20rem
    top: 85rem
  &:nth-of-type(6)
    top: 105rem
  &:nth-of-type(7)
    height: 20rem
    top: 120rem
  &:nth-of-type(8)
    top: 140rem
  &:active
    width: 100%

.eyeArtworkSm
  height: 8rem
  width: 8rem
.eyeArtworkLg
  height: 20rem
  width: 20rem

.eyeLuckySong
  position absolute
  top: 180rem
  &__ttl
    background-color: c_eye_yellow
    border: double 4px c_eye_blue
    color c_eye_purple
    font-size 150%
    width: 15rem
  &__stc
    color: c_eye_violet
  &__tables
    display: flex
    flex-wrap: wrap
    font-size 80%
    table
      border: solid 1px c_eye_black
      margin 1rem
      th, td
        border: solid 1px c_eye_black
        a
          color: c_eye_blue
          text-decoration: underline 1px c_eye_blue
+ls()
  .eyeAccessCounter
    font-size: 200%
    right: 5rem
    img
      width 20rem
  .eyeIllust
    height: 20rem
    &:nth-of-type(2n+1)
      left: 15rem
    &:nth-of-type(2n)
      right: 15rem
    &:nth-of-type(1)
      top: 15rem
    &:nth-of-type(2)
      height: 40rem
      top: 35rem
    &:nth-of-type(3)
      top: 75rem
    &:nth-of-type(4)
      top: 95rem
    &:nth-of-type(5)
      height: 30rem
      top: 115rem
    &:nth-of-type(6)
      top: 145rem
    &:nth-of-type(7)
      height: 30rem
      top: 165rem
    &:nth-of-type(8)
      top: 195rem
    &:active
      width: 80%
  .eyeLuckySong
    top: 250rem
    &__ttl
      font-size 200%
      width: 20rem