.nazo__q
  animation: nazo 5s
  animation-fill-mode: both
  color transparent
  position: absolute
  right: 1rem
  text-align right
  top: 1.5rem
  &__barcode
    font-family ff_barcode
    font-size 200%
    margin 0
  &__emoji
    font-family ff_emoji
    margin 0

@keyframes nazo
  0%
    color transparent
  100%
    color c_pages.nazo.txt


.nazo__content
  margin-bottom 5rem
  &__item
    display grid
    grid-column-gap 1rem
    grid-template-columns 2fr 3fr

.nazo__detail
  &__ttl
    color c_nazo_pink
    font-weight 500
    margin 0
  &__url
    font-size 70%
    font-weight 500
    margin 0
    & a
      text-underline-offset 2px
      text-decoration underline solid


+ls()
  .nazo__content
    display grid
    grid-auto-flow row
    grid-column-gap 2rem
    grid-template-columns 1fr 1fr
    padding-top 3rem
    &__item
      padding-top 3rem
      &__url
        font-size 90%

