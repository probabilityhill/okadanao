.nazo__q
  animation: emoji 3s ease-in .5s forwards
  color transparent
  font-family ff_emoji
  letter-spacing: 0
  margin 0
  position: absolute
  right: 1rem
  text-align center
  top: 5rem
  span
    display inline-block
    padding-top .5rem

@keyframes emoji
  100%
    color c_pages.nazo.txt

.nazo__content
  padding-bottom 5rem
  &__item
    display grid
    grid-column-gap 1rem
    grid-template-columns 3fr 5fr
    padding-bottom: 2rem

.nazo__detail
  padding-right: 1rem
  &__ttl
    color c_nazo_pink
    font-weight 500
    margin 0
  &__url
    font-size 70%
    font-weight 500
    margin 0
  &__stc
    font-size 90%
  a
    text-decoration underline solid
    text-underline-offset 2px
    &:hover
      background-color: c_nazo_navy
      color c_nazo_yellow


+ls()
  .nazo__q
    font-size 120%
    right: 2.5rem

  .nazo__content
    display grid
    grid-auto-flow row
    grid-column-gap 2rem
    grid-template-columns 1fr 1fr
    &__item
      padding-bottom 3rem
      &__url
        font-size 90%

