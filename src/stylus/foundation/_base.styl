html
  cursor inherit
  font-size: 62.5%

body
  font-size: 1.4rem
  font-weight: 500
  letter-spacing: .1em
  margin: 0
  overflow: overlay

*
  float: none
  position: static

a
  color: inherit
  text-decoration: none

img
  width: 100%

li
  list-style: none

// ポップアップ画像の枠を消す
#lightbox .lb-image
  border: none

.material-symbols-outlined {
  font-variation-settings:
  'FILL' 0,
  'wght' 200,
  'GRAD' 0,
  'opsz' 48
}

for page in pages
  .{page}
    background-color: c_pages[page].bg
    color: c_pages[page].txt
    font-family: ff_pages[page].txt

    ::selection
      background-color: c_pages[page].selectBg
      color: c_pages[page].selectTxt
    ::moz-selection
      background-color: c_pages[page].selectBg
      color: c_pages[page].selectTxt
    &::-webkit-scrollbar
      background-color: c_pages[page].scrollbar
    &::-webkit-scrollbar-thumb
      background-color: c_pages[page].scrollbarThumb