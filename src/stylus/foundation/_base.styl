html
  cursor inherit
  font-size: 62.5%

body
  font-size: 1.4rem
  font-weight: 500
  letter-spacing: .1em
  margin: 0

for page in pages
  .{page}
    background-color: c_ + page + _bg_1
    color: c_ + page + _txt_1
    font-family: ff_ + page

body:not(.top)
  padding 5rem 4rem

+ls()
  body:not(.top)
    padding 10rem 15rem

*
  float: none
  position: static

a
  color: inherit
  text-decoration: none
  &:hover
    color c_theme_1
img
  width: 100%

li
  list-style: none


::selection
  color: c_bg_1
  background-color: c_txt_1
::moz-selection
  color: c_bg_1
  background-color: c_txt_1

::-webkit-scrollbar
  background-color c_bg_2_dark
::-webkit-scrollbar-thumb
  background-color c_bg_1_dark

.displayNone
  display: none

// ポップアップ画像の枠を消す
#lightbox .lb-image
  border: none

.material-symbols-outlined {
  font-variation-settings:
  'FILL' 0,
  'wght' 200,
  'GRAD' 0,
  'opsz' 48
}
