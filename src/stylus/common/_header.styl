.header
  left: 1rem
  position: fixed
  top: 1rem
  z-index: 10000

.headerSiteName
  font-family: "Libre Barcode 39", cursive
  margin: 0
  & a:hover
    color inherit

.headerMenu
  font-family: f-ttl, sans-serif
  font-size: 120%
  margin: 0
  padding: .5rem 0 0
  &__here
    color c-theme-1
  &__emoji
    font-family: "Noto Sans Egyptian Hieroglyphs", sans-serif
    font-size 160%
    font-weight bold

+ls()
  .header
    left: 2.5rem
    top: 1.5rem
  .headerMenu
    font-size: 120%
