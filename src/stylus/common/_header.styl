.header
  left: 1rem
  position: fixed
  text-shadow: 0 0 .1rem c_txt_1, 0 0 1rem c_txt_1
  top: 1rem
  z-index: 10000

.headerSiteName
  font-family: "Tilt Neon", cursive
  font-size: 180%
  margin: 0

.headerSiteName a:hover, .headerSiteNameHere
  text-shadow: .3rem 0 .8rem c_pink_glitch, -.3rem 0 .8rem c_cyan_glitch, .2rem 0 c_pink_glitch, -.2rem 0 c_cyan_glitch

.headerMenu
  font-family: f-ttl, sans-serif
  font-weight: 500
  font-size: 150%
  margin: 0
  padding: .5rem 0 0
  & a:hover, &__here
    color c_cyan_light
    text-shadow: 0 0 .1rem c_txt_1, 0 0 .4rem c_cyan, 0 0 .8rem c_cyan, 0 0 1rem c_cyan
  &__emoji
    font-family: "Noto Sans Egyptian Hieroglyphs", sans-serif
    font-size 120%

+ls()
  .header
    left: 2.5rem
    top: 1.5rem
  .headerSiteName
    font-size 250%
  .headerMenu
    font-size: 200%
