.header
  left: 1rem
  position: fixed
  top: 1rem
  z-index: 10000
.headerSiteName
  font-size: 180%
  margin: 0
.headerMenu
  font-size: 160%
  margin: 0
  padding: .5rem 0 0

+ls()
  .header
    left: 2.5rem
    top: 1.5rem
  .headerSiteName
    font-size 250%
  .headerMenu
    font-size: 200%

for page in pages
  .{page}
    .headerSiteName
      font-family: ff_pages[page].siteName
    .headerMenu
      font-family: ff_pages[page].headerMenu

.{pages[0]}
  .headerSiteName
    text-shadow: .25rem 0 .4rem c_top_pink_glitch, -.25rem 0 .4rem c_top_cyan_glitch, .2rem 0 .6rem c_top_pink_glitch, -.2rem 0 .6rem c_top_cyan_glitch, .2rem 0 c_top_pink_glitch, -.2rem 0 c_top_cyan_glitch
  .headerSiteName a:hover
    color: c_top_purple_light
  .headerMenu
    a:hover
      color c_top_cyan_light
    li
      text-shadow: 0 0 .1rem c_top_white, 0 0 .4rem c_top_cyan, 0 0 .8rem c_top_cyan, 0 0 1rem c_top_cyan
      &:first-child
        animation: neon50 2s infinite
      &:nth-child(2)
        animation: neon30 2s infinite
      &:nth-child(3)
        animation: neon80 2s infinite
      &:last-child
        animation: neon50 2s infinite
        font-family: ff_hieroglyphs
        font-size 120%

neonAnimation(30)
neonAnimation(50)
neonAnimation(80)

.{pages[1]}
  .headerSiteName
    font-weight: 300
    a:hover
      color: c_works_green
  .headerMenu
    font-size 110%
    li
      padding: 0 0 1rem
      &:first-child a, a:hover
        color: c_works_red
        text-decoration: underline c_works_red 1px
        text-underline-offset: 5px

.{pages[2]}
  .headerSiteName
    color: c_pics_white
    a:hover
      color: c_pics_blue
  .headerMenu
    display: flex
    font-size 150%
    justify-content: flex-start
    letter-spacing: -.1em
    padding-top: 0
    li
      margin-right: 2rem
      a
        color: c_pics_red
        -webkit-text-stroke 1px c_pics_white
        text-stroke 1px c_pics_white
      &:nth-child(2) a, a:hover
        color: c_pics_blue

.{pages[3]}
  .headerSiteName
    font-weight: 700
  .headerMenu
    font-size 160%
    letter-spacing: 0
    padding-top: 0
  .headerSiteName, .headerMenu
    a
      background-color: c_nazo_yellow_transp
    li:nth-child(3) a, a:hover
      background-color: c_nazo_blue_light
      color: c_nazo_red

.{pages[4]}
  .header
    position: static
  .headerSiteName
    animation: eyeSiteName 5s linear infinite
    color: c_eye_green
    left: 1rem
    position: absolute
    text-shadow: 0 0 .8rem c_eye_black, 0 0 1.5rem c_eye_black
    top: 1rem
    white-space: nowrap
  .headerMenu
    color: c_eye_blue_light
    text-shadow: .3rem .3rem 0 c_eye_red
    li:nth-child(1)
      animation: eyeHeaderMenu .4s linear infinite
    li:nth-child(2)
      animation: eyeHeaderMenu .4s linear .2s infinite
    li:nth-child(3)
      animation: eyeHeaderMenu .4s linear .1s infinite
    li:nth-child(4)
      animation: eyeHeaderMenu .4s linear .3s infinite

@keyframes eyeSiteName
  30%
    color c_eye_red
  50%
    color c_eye_yellow
  80%
    color c_eye_purple
  100%
    color c_eye_green
    left: 100vw

@keyframes eyeHeaderMenu
  50%
    opacity: 0
  100%
    opacity: 1

+ls()
  .{pages[1]}
    .headerMenu
      font-size 150%
      li
        padding: 0 0 1.1rem
  .{pages[2]}
    .headerMenu
      font-size 180%
  .{pages[3]}
    .headerMenu
      font-size 200%