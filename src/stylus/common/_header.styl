.header
  left: 1rem
  position: fixed
  text-shadow: 0 0 .1rem c_txt_1, 0 0 1rem c_txt_1
  top: 1rem
  z-index: 10000

.headerSiteName
  font-family: "Tilt Neon", cursive
  font-size: 180%
  margin: 0
  & a:hover
    text-shadow: 0 0 .1rem c_txt_1, 0 0 .4rem c_purple, 0 0 .8rem c_purple, 0 0 1rem c_purple
.headerSiteNameHere
  text-shadow: 0 0 .1rem c_txt_1, 0 0 .4rem c_purple, 0 0 .8rem c_purple, 0 0 1rem c_purple

.headerMenu
  font-family: f-ttl, sans-serif
  font-weight: 500
  font-size: 150%
  margin: 0
  padding: .5rem 0 0
  & a:hover
    text-shadow: 0 0 .1rem c_txt_1, 0 0 .4rem c_cyan, 0 0 .8rem c_cyan, 0 0 1rem c_cyan
  &__here
    text-shadow: 0 0 .1rem c_txt_1, 0 0 .4rem c_cyan, 0 0 .8rem c_cyan, 0 0 1rem c_cyan
  &__emoji
    font-family: "Noto Sans Egyptian Hieroglyphs", sans-serif
    font-size 120%

+ls()
  .header
    left: 2.5rem
    top: 1.5rem
  .headerMenu
    font-size: 120%
