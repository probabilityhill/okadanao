doctype html
block vars

html(lang="ja", dir="ltr", prefix="og: http://ogp.me/ns#")
  head
    include include/_head

  body(class=key)
    // ##### ヘッダー #####
    header.header
      include include/_header

    // ##### メイン #####
    main(id="luxy" class=key+"__main")
      block contents

    // ##### フッター #####
    footer.footer
      include include/_footer

    // プログレッシブ画像
    script(src="progressive-image/index.js")
    script.
      (function(){
        new Progressive({
          el: '#app',
          lazyClass: 'lazy'
        }).fire()
      })()
    block script
